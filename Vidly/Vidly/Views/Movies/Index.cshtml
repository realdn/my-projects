
@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<a href="/movies/new/" class="btn btn-primary"> New Movie</a>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">

        <thead>
            <tr><th>Movie</th><th>Genre</th></tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
            {
                <tr>

                    <td>
                        <a href="/movies/edit/@movie.Id"> @movie.Name</a>
                    </td>
                    <td>@movie.MovieGenre.Genre</td>

                </tr>
            }


        </tbody>



    </table>

}
else
{
    <h2>We do not have any customer yet</h2>

}